{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": ["docker-build"],
            "dockerRun": {
                "containerName": "telegram-parser",
                "image": "telegram-parser:latest",
                "envFiles": [ ".env" ],
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}",
                        "containerPath": "/srv/app",
                        "permissions": "rw"
                    }
                ],
                "network": "host",
                "remove": true
            },
            "python": {
                "args": [ "run" ],
                "file": "__main__.py"
            }
        },
        {
            "label": "docker-build",
            "type": "docker-build",
            "dockerBuild": {
                "context": "${workspaceFolder}",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "tag": "telegram-parser:latest"
            }
        }
    ]
}