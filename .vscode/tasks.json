{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": ["docker-build"],
            "dockerRun": {
                "containerName": "telegram-parser-debug",
                "image": "telegram-parser:debug",
                "env": {
                    "PARSER_ID": "4133ce16-97ff-407a-a6d2-811317ba0a56",
                    "API_URL": "http://host.docker.internal:47352/private/api/v1"
                },
                "extraHosts": [
                    {
                        "hostname": "host.docker.internal",
                        "ip": "host-gateway"
                    }
                ],
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}",
                        "containerPath": "/srv/app",
                        "permissions": "rw"
                    }
                ],
                "remove": true
            },
            "python": {
                "args": [ "run" ],
                "file": "main.py"
            }
        },
        {
            "label": "docker-build",
            "type": "docker-build",
            "dockerBuild": {
                "context": "${workspaceFolder}",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "tag": "telegram-parser:debug"
            }
        }
    ]
}